{
  "$schema": "http://json-schema.org/schema",
  "id": "SchematicsNgAdd",
  "title": "Add this library to the project",
  "type": "object",
  "properties": {
    "path": {
      "type": "string",
      "format": "path",
      "description": "The path to create the schematic.",
      "visible": false
    },
    "project": {
      "type": "string",
      "description": "The name of the project.",
      "$default": {
        "$source": "projectName"
      }
    },
    "schematicsPath": {
      "type": "string",
      "description": "Name of the destination folder",
      "default": "schematics"
    }
  },
  "required": []
}
