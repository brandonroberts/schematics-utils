{
  "$schema": "../node_modules/@angular-devkit/schematics/collection-schema.json",
  "schematics": {
    "add": {
      "description": "Add support for ng-add.",
      "factory": "./add/index#addNgAdd",
      "schema": "./add/schema.json"
    },
    "migration": {
      "description": "Add a migration schematic.",
      "factory": "./migration/index#addMigration"      
    },
    "collection": {
      "description": "Check/add the schematic collection.",
      "factory": "./collection/index",
      "hidden": true      
    },
    "schematic": {
      "description": "Add a new schematic to the collection.",
      "factory": "./schematic/index#addSchematic",
      "schema": "./schematic/schema.json"
    }
  }
}
